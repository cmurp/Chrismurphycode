<html>
<head>
    <% include ./partials/head %>
    <script>
    $( document ).ready(function() {
        <% for(let i = 0; i < projects.length; i++) { %>
            // load tags
            <% for(tag in projects[i].tags){ %>
                $.ajax({
                    type: 'POST',
                    data: {tag : '<%= tag %>'},
                    url: '/getTag',
                    success: function(data) {
                        var newTag = data;
                        $("#<%= projects[i]._id %>-tags").append('<label><span class="badge" style="background-color: ' + newTag.color + '">' + newTag.tag + '</span></label>');
                    }
                });
            <% } %>
        <% } %>
    });

    </script>
</head>
<body>
    <% include ./partials/sidebar %>
    <div class="container-fluid p-0">
        <section class="resume-section p-3 p-lg-5 d-flex d-column" id="about">
            <div class="resume-item d-flex flex-column flex-md-row">
              <div class="mr-auto">
                <h1>Projects</h1>
                <% for(let i = 0; i < projects.length; i++) { %>
                    <h3><a href="/projects/<%= projects[i].name %>"><%= projects[i].name %></a></h3>
                    <article id="<%= projects[i]._id %>-tags"></article>
                    <a href="/admin/editProject/<%= projects[i].name %>">Edit</a>        
                <% } %>
                </div>
            </div>
        </section>
    </div>

    <!-- JQuery -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <!-- Bootstrap tooltips -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.4/umd/popper.min.js"></script>
    <!-- Bootstrap core JavaScript -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/js/bootstrap.min.js"></script>
    <!-- MDB core JavaScript -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.5.13/js/mdb.min.js"></script>

</body>
</html>
